<view class="editor">
  <view>
    <input bindinput="name" placeholder="姓名" value="{{receiverName}}"></input>
  </view>
  <view class="sex">
    <block wx:if="{{gender == 1}}">
      <view data-sex="female" bindtap="sexChoose">
        <view class="correct sex_active" data-sex="female">
          <image data-sex="female" src="../../images/cancel.png"></image>
        </view>
        <text data-sex="female">女生</text>
      </view>
      <view class="man" bindtap="sexChoose" data-sex="male">
        <view class="correct" data-sex="male">
          <image data-sex="male" src="../../images/cancel.png"></image>
        </view>
        <text data-sex="male">男生</text>
      </view>
    </block>
    <block wx:else>
      <view bindtap="sexChoose" data-sex="female">
        <view class="correct" data-sex="female">
          <image data-sex="female" src="../../images/cancel.png"></image>
        </view>
        <text data-sex="female">女生</text>
      </view>
      <view class="man" bindtap="sexChoose" data-sex="male">
        <view class="correct sex_active" data-sex="male">
          <image data-sex="male" src="../../images/cancel.png"></image>
        </view>
        <text data-sex="male">男生</text>
      </view>
    </block>
  </view>
  <view>
    <input bindinput="phone" placeholder="电话" value="{{receiverPhone}}"></input>
  </view>
  <view wx:if="{{type == 'receive'}}">
    <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}" range-key="name">
      <view class="picker">
        <input type="text" placeholder="选择省市区" value="{{pickerAddress}}"></input>
        <image class="arrow" src="../../images/arrow_down.png"></image>
      </view>
    </picker>
  </view>
  <!-- <view wx:if="{{type == 'receive'}}">
    <input type="text" placeholder="详细地址" bindinput="detail" value="{{content.fullAddress}}"></input >
  </view> -->
  <!-- <view wx:if="{{type == 'default'}}" class="address">
    <view>{{area}}</view>
    <view>{{schoolName}}</view>
  </view> -->
  <view class="area" bindtap="chooseArea">
    <input type="text" placeholder="所在区域" value="{{areaVal}}"></input>
    <i-icon type="enter" size="20"/>
  </view>
  <view><input placeholder="宿舍号、门牌号" bindinput="address" value="{{address}}"></input></view>
</view>
<view wx:if="{{type == 'default'}}" class="delete" bindtap="delete"><view>删除</view></view>
<view class="save" bindtap="save">
  <view>保存</view>
</view>