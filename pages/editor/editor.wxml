<view class="editor">
  <view>
    <input bindtap="name" placeholder="姓名" value="{{content.receiverName}}"></input>
  </view>
  <view class="sex" wx:if="{{type == 'default'}}">
    <block wx:if="{{content.sex}}">
      <view data-sex="female" bindtap="sexChoose">
        <view class="correct sex_active" data-sex="female">
          <image data-sex="female" src="../../images/cancel.png"></image>
        </view>
        <text data-sex="female">女生</text>
      </view>
      <view class="man" bindtap="sexChoose" data-sex="male">
        <view class="correct" data-sex="male">
          <image data-sex="male" src="../../images/cancel.png"></image>
        </view>
        <text data-sex="male">男生</text>
      </view>
    </block>
    <block wx:else>
      <view bindtap="sexChoose" data-sex="female">
        <view class="correct" data-sex="female">
          <image data-sex="female" src="../../images/cancel.png"></image>
        </view>
        <text data-sex="female">女生</text>
      </view>
      <view class="man" bindtap="sexChoose" data-sex="male">
        <view class="correct sex_active" data-sex="male">
          <image data-sex="male" src="../../images/cancel.png"></image>
        </view>
        <text data-sex="male">男生</text>
      </view>
    </block>
  </view>
  <view>
    <input bindtap="phone" placeholder="电话" value="{{content.receiverPhone}}"></input>
  </view>
  <view wx:if="{{type == 'receive'}}">
    <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
      <view class="picker">
        <input type="text" placeholder="选择省市区"></input>
        <image class="arrow" src="../../images/arrow_down.png"></image>
      </view>
    </picker>
  </view>
  <view wx:if="{{type == 'receive'}}"><input type="text" placeholder="详细地址" bindtap="detail" value="{{content.fullAddress}}"></input ></view>
  <view wx:if="type == 'default'" class="address">
    <view>111111</view>
    <view>222222222</view>
  </view>
  <view wx:if="type == 'default'" class="area" bindtap="chooseArea">
    <input type="text" placeholder="所在区域" value="{{areaVal}}"></input>
    <i-icon type="enter" size="20"/>
  </view>
  <view wx:if="{{type == 'default'}}"><input placeholder="宿舍号、门牌号"></input></view>
</view>
<view wx:if="{{type == 'default'}}" class="delete" bindtap="delete"><view>删除</view></view>
<view class="save" bindtap="save">
  <view>保存</view>
</view>