/* pages/editor/editor.wxss */
page {
  font-weight: 500;
  font-family: PingFang-SC-Medium;
  background: rgba(245, 245, 245, 1);
}

.editor {
  margin-top: 20rpx;
  padding-left: 28rpx;
  background: #ffffff;
}

.editor>view {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  line-height: 100rpx;
  color: rgba(78, 78, 78, 1);
  border-bottom: 1rpx solid rgba(220, 220, 220, 1);
}

input {
  flex: 1;
  padding-left: 20rpx;
}

.address {
  display: block !important;
}

.address view:nth-child(1) {
  margin-top: 21rpx;
  font-size: 22rpx;
  line-height: 22rpx;
  color: rgba(153, 153, 153, 1);
}

.address view:nth-child(2) {
  margin-top: 11rpx;
  margin-bottom: 21rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  color: rgba(78, 78, 78, 1);
}

i-icon {
  position: absolute;
  right: 32rpx;
}

.save,
.delete {
  padding: 26rpx;
  padding-bottom: 0;
  font-size: 36rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 80rpx;
  text-align: center;
}

.save view {
  width: 100%;
  background: rgba(0, 140, 240, 1);
  border-radius: 10rpx;
}

.delete view {
  width: 100%;
  border-radius: 10rpx;
  color: red;
  background: #ffffff;
}