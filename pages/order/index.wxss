/* pages/order/index.wxss */
page>view {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.order {
  margin-bottom: 96rpx;
}

.part1,
.part2 {
  padding: 22rpx 0 21rpx 0;
  background: #ffffff;
}

.part1 {
  flex: 1;
  padding-left: 24rpx;
}

.part2 {
  padding-right: 12rpx;
  text-align: right;
}

.part1>view:nth-child(1) {
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
}

.part2>view:nth-child(1) {
  font-size: 26rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.part1>view:nth-child(2),
.part2>view:nth-child(2) {
  margin-top: 17rpx;
  font-size: 20rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.part1>view:nth-child(n+3) {
  margin-top: 24rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.part2>view:nth-child(3) {
  padding: 20rpx 0;
  font-size: 34rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.part2 text {
  color: rgba(0, 140, 240, 1);
}

.circle1,
.circle2 {
  display: inline-block;
  margin-right: 10rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 5rpx;
  background: #ff5b38;
}

.circle2 {
  background: #808080;
}

.btns {
  display: flex;
  margin-top: 41rpx;
}

.btns view {
  display: inline-block;
  padding: 12rpx 20rpx;
  border-radius: 5rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.btns view:nth-child(1) {
  border: 1rpx solid rgba(153, 153, 153, 1);
}

.btns view:nth-child(2) {
  margin-left: 20rpx;
  color: rgba(0, 140, 240, 1);
  border: 1px solid rgba(0, 140, 240, 1);
}