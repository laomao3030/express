<!-- pages/orderDetail/index.wxml -->
<view class="line"></view>
<view class="detail">
  <view class="status">
    <text>等待确认</text>
  </view>
  <view class="tips">
    <text>订单将在24小时之后自动确认收货，如有疑问请及时</text>
    <text>联系客服</text>
  </view>
  <view class="confirm">确认送达</view>
</view>
<view class="call">
  <view>{{detail.receiverName}}</view>
  <view bindtap="call"><image src="../../images/phone.png"></image></view>
</view>
<view class="content1">
  <view>
    <text class="label">快递点</text>
    <text class="text">{{detail.expressName}}</text>
  </view>
  <view>
    <text class="label">包裹规格</text>
    <text class="text">{{detail.pkgSize}}</text>
  </view>
  <view>
    <text class="label">取货码</text>
    <text class="text">{{detail.expressNumber}}</text>
  </view>
  <view>
    <text class="label">备注</text>
    <text class="text">{{detail.remark}}</text>
  </view>
  <view class="price">
    实付
    <text>￥{{detail.actualPrice}}</text>
  </view>
</view>
<view class="content2">
  <view>
    <text  class="label">送达时间</text>
    <text class="text">{{detail.serviceTime}}</text>
  </view>
  <view>
    <text  class="label">收货地址</text>
    <text  class="text">{{detail.receiverAddress}}</text>
  </view>
  <view>
    <text  class="label">下单时间</text>
    <text  class="text">{{detail.createTime}}</text>
  </view>
  <view>
    <text  class="label">订单编号</text>
    <text  class="text">{{detail.orderId}}</text>
  </view>
</view>