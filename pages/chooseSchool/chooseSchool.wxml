<view class="choose-school">
  <view class="input">
    <image class="search" src="../../images/serach.png"/>
    <input placeholder='请输入学校名称' bindinput="bindKeyInput" auto-focus></input>
  </view>
  <view class="title">当前学校</view>
  <view class="school">
    <view>{{schoolName}}</view>
    <view class="location" bindtap="reLocation">
      <image src="../../images/location.png"/>
      重新定位
    </view>
  </view>
  <view class="blank"></view>
  <view class="title">附近学校</view>
  <view class="near-school">
    <view wx:for="{{nearSchool}}" wx:key="{{item.id}}">
      {{item.	schoolName}}
    </view>
  </view>
  <view class="blank"></view>
  <view class="title">常用地址</view>
  <view class="history">
    <view class="item">
      <view class="left">
        <view>湖北理工学院</view>
        <view>某某公寓</view>
        <view>xxxx 15220618484</view>
      </view>
      <!-- <view class="right" bindtap="remove">X</view> -->
    </view>
  </view>
</view>
